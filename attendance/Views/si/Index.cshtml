@model IEnumerable<attendance.Models.schedule_info>

@{
    ViewBag.Title = "Schedule Info";
}

<h2>Schedule Info</h2>

<button type="button" class="btn btn-primary">
    @Html.ActionLink("Create New", "Create", null, new { style = "color:white" })
</button>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Schedule_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_bf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.start_af)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_bf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.end_af)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Schedule_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_bf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.start_af)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_bf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.end_af)
        </td>
        <td>
            <button class="btn btn-success">
                @Html.ActionLink("Edit", "Edit", new { id = item.schedule_id }, new { style = "color:white" })
            </button>
            <button class="btn btn-warning">
                @Html.ActionLink("Details", "Details", new { id = item.schedule_id },  new { style = "color:white" }) 
                    </button>
                    <button class="btn btn-danger">
                @Html.ActionLink("Delete", "Delete", new { id = item.schedule_id },  new { style = "color:white" })
                            </button>
</td>
    </tr>
}

</table>
